<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="5dp"
card_view:cardCornerRadius="5dp"
card_view:cardElevation="8dp"
android:paddingLeft="16dp"
android:paddingRight="16dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_vi_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_vi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toRightOf="@+id/iv_vi_image"
        android:gravity="center"
        android:paddingRight="5dp"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_vi_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingTop="3dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/iv_vi_image"/>

    <TextView
        android:id="@+id/tv_vi_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:paddingTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_vi_source"/>

</RelativeLayout>

</android.support.v7.widget.CardView>