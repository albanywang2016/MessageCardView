<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="300dp"
android:layout_height="fill_parent"
android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:id="@+id/register_tv_username"
        style="@style/MyBlueTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="@string/username"
        />

    <EditText
        android:id="@+id/register_et_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:hint="@string/enter_username"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/register_tv_email"
        style="@style/MyBlueTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="@string/email"
        />

    <EditText
        android:id="@+id/register_et_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:hint="@string/enter_email"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress" />


    <TextView
        android:id="@+id/register_tv_password"
        style="@style/MyBlueTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:text="@string/password"
        />

    <EditText
        android:id="@+id/register_et_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:hint="@string/enter_password"
        android:textColorHint="@color/white"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/register_tv_password2"
        style="@style/MyBlueTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:text="@string/re_password"
        />

    <EditText
        android:id="@+id/register_et_password2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:hint="@string/enter_password"
        android:textColorHint="@color/white"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/registerButton"
        style="@style/appiratorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>



</LinearLayout>